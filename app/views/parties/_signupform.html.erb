<%= simple_form_for :user, :url => '/users' do |f| %>
    <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
        <%= f.text_field :password, class: "form-control", placeholder: "Enter Password" %>
    </div>
    <div class="form-group">
        <%= f.text_field :password, class: "form-control", placeholder: "Validate Password" %>
    </div>

    <%= f.button :submit, "Sign Up", class: "btn btn-default" %> 
    <%= f.button :submit, "Sign In", class: "btn btn-default" %>
<% end %>

