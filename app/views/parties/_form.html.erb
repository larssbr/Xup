    </div>
    <div class="form-group">
      <%= f.input :location, class: "form-control", placeholder: "Enter Location" %>  
    </div>
    <div class="form-group">
      <%= f.input :description, class: "form-control", placeholder: "Enter Description" %>  
    </div>
    <div class="form-group">
      <%= f.input :participants, class: "form-control", placeholder: "Enter Participants" %>  
    </div>

      <%= f.button :submit, class: "btn btn-default" %>  
