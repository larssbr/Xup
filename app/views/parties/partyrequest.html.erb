<h1>Listing  requests</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>PartyName</th>
        <th>Owner</th>
        <th>Message</th>
        <th>Start Time</th>
        <th>Location</th>
        <th>Description</th>
        <th>Participants</th>
        <th colspan="3"></th>
      </tr>
    </thead>
<%# This is the table%>
	
    <tbody>
      <% @parties.each do |party| %>
        <% if current_user.name == party.owner %>
          <tr>
            <td><%= party.name %></td>
            

            <td> this is <%=party.id%></td>
             <% @jm.each do |m| %>

             
              <% if m.party_id == party.id && m.status == 0%>
                  <%= @user.find(m.user_id).name%>
                <td> <%= @user.find(m.user_id).name%> wants to join this party: <%= party.name%></td>
                <td><%=m.status%> is status</td>
                <td><%= link_to 'add', edit_join_member_path(m.id), class: 'btn btn-info btn-sm' %></td>
                <td><%= link_to 'reject', edit_join_member_path(m.id), class: 'btn btn-danger btn-sm' %></td>

                <%end%>
                <% end %>
          </tr>
          <%end%>
        <% end %>
      
    </tbody>
  </table>


</div>

<br>

<%= link_to 'New Party', new_party_path, class: 'btn btn-success btn-sm' %>
