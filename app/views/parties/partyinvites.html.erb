            <td> this is <%=party.owner%>s party</td>'
            <td>you are invited</td>
            <td><%=j.status%></td>

            <td><%= link_to 'add', edit_join_member_path(j.id), class: 'btn btn-info btn-sm' %></td>
                <td><%= link_to 'reject', edit_join_member_path(j.id), class: 'btn btn-danger btn-sm' %></td>
             

                <%end%>

                <%end%>
                <% end %>
          </tr>
       
     
    </tbody>
  </table>


</div>

