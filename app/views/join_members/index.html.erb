<h1>Listing join_members and status</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Party</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @join_members.each do |join_member| %>
      <tr>
        <td><%= User.find(join_member.user_id).name %></td>
        <td><%= Party.find(join_member.party_id).name %></td>
        <td><%= join_member.status %></td>

        <td><%= link_to 'Show', join_member %></td>
        <td><%= link_to 'Edit', edit_join_member_path(join_member) %></td>
        <td><%= link_to 'Destroy', join_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Join member', new_join_member_path %>
